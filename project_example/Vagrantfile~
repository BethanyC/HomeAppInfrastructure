Vagrant.configure("2") do |config|
  config.vm.box = "merikan/centos6.5-32bit-desktop-puppet"
  config.vm.provision "file", source: "deploy.tar.gz", destination: "/tmp/deploy.tar.gz"
  config.vm.provision "shell" do |s|
    s.inline = "tar -xvzf /tmp/deploy.tar.gz -C /tmp && 
    s.privileged = "cd /tmp/deploy && ./provisioner.sh"
  end
 config.vm.provider "virtualbox" do |v|
    v.name = "home_app"
 end
end


